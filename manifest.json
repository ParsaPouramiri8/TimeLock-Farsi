{
  "manifest_version": 3,
  "name": "TimeLock – Website Timer Blocker",
  "version": "1.0.0",
  "description": "سایت‌هارو با تایمر قفل کن. تا زمان تموم نشه باز نمی‌شن!",
  "permissions": ["storage", "alarms", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "TimeLock",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/lock-16.png",
    "48": "icons/lock-48.png",
    "128": "icons/lock-128.png"
  },
  "web_accessible_resources": [{
    "resources": ["blocked.css", "fonts/*"],
    "matches": ["<all_urls>"]
  }]
}